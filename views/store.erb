<link rel='stylesheet' href='/styles.css'>

  <div class="col-md-6">
    <h5> <%=@store.name%> </h5>
    <form action="/store" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="hidden" name="store_id" value="<%=@store.id%>">
      <button type="submit" class="btn-xs btn-danger">Delete from stores</button>
    </form>

    <h6> Update Store </h6>

    <form action="/store" method="post">
      <input type="hidden" name="_method" value="patch">
      <input type="hidden" name="id" value="<%=@store.id%>">
      <label>Change Store Name:</label>
      <input type="text" name="name" value="<%=@store.name%>"><br>
      <label>Change Store Address:</label>
      <input type="text" name="address" value="<%=@store.address%>"><br>
      <button type="submit" class="btn-xs btn-primary">Edit store</button>
    </form>

    <h4> All Brands Sold Here </h4>
    <% @store.brands.each() do |brand|%>
    <li><%=brand.name%></li>
    <%end%>
